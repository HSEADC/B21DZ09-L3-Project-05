<%= form_with(model: support, url: support_request_support_path) do |form| %>
  <% if support.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(support.errors.count, "error") %>. Обращение не было отправлено:</h2>

      <ul>
        <% support.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Ваша почта", style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <br>

  <div>
    <%= form.label :"Расскажите, что случилось", style: "display: block" %>
    <%= form.text_area :body %>
  </div>
  
  <br>

  <div>
    <%= form.submit :"Отправить"%>
  </div>
<% end %>