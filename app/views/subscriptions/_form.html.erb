<%= form_with(model: subscription) do |form| %>
  <% if subscription.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(subscription.errors.count, "error") %>. Подписка не может быть сохранена:</h2>

      <ul>
        <% subscription.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="Subscription">
    <%= form.label :email, style: "display: none" %>
    <%= form.email_field :email, placeholder: "Твой e-mail" %>

    <%= form.submit :"Отправить", class: "mailButton" %>
  </div>
<% end %>