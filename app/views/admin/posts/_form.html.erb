<%= form_with(model: [:admin, post]) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"Заголовок", style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <br>

  <div>
    <%= form.label :"Текст публикации", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <br>

  <div>
    <%= form.label :"Загрузить изображение", style: "display: block" %>
    <%= form.file_field :post_image%>
  </div>

  <br>

  <div>
    <%= form.label :category %>
    <%= form.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id]})%>
  </div>
  
  <br>

  <div>
    <%= form.submit :"Опубликовать"%>
  </div>
<% end %>
